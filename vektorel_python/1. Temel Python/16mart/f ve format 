ad = "Melisa"
yas = 18
print(yas)
print(ad,"Demek yaşın", yas)
print(f"{ad} Demek yaşın {yas}") #en çok kullanılan
print("{} Demek yaşın {}".format(ad,yas))

ad = input("Adınız nedir?")
print(f"Merhaba {ad}")
yil = int(input("Hangı yılda doğdunuz?"))
print(ad,"demek", 2024-yil,"yaşındasın")
print(f"{ad} demek yaşın {2024-yil}") #en çok kullanılan
print("{} demek yaşın {}".format(ad,2024-yil))